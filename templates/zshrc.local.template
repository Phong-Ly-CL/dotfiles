# Local ZSH configuration template
# Copy this to ~/.zshrc.local and customize for your environment

# Auto-detect and load environment-specific config
if [[ -n "$CODESPACES" ]]; then
    # GitHub Codespaces
    source ~/.dotfiles/configs/environments/codespaces.zsh
elif [[ -n "$WSL_DISTRO_NAME" ]] || [[ "$(uname -r)" == *microsoft* ]]; then
    # Windows Subsystem for Linux
    source ~/.dotfiles/configs/environments/wsl.zsh
elif [[ "$(uname)" == "Darwin" ]]; then
    # macOS
    source ~/.dotfiles/configs/environments/macos.zsh
else
    # Generic Linux
    echo "üêß Linux environment detected"
fi

